# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agentic_workflows

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SECRETS_MANAGER_ENABLED=false
AWS_S3_BUCKET=
AWS_SES_VERIFIED_EMAIL=noreply@yourdomain.com

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Configuration
DEFAULT_LLM_PROVIDER=anthropic  # anthropic, openai, bedrock
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Third-Party API Keys
# Slack
SLACK_BOT_TOKEN=
SLACK_WEBHOOK_URL=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# OAuth Providers (for user authentication)
# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/microsoft/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# Google (for Google Calendar, Gmail integrations)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# HubSpot
HUBSPOT_API_KEY=
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=

# Frontend
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:8000

# Frontend OAuth Client IDs (for initiating OAuth flows)
REACT_APP_GOOGLE_OAUTH_CLIENT_ID=
REACT_APP_MICROSOFT_CLIENT_ID=
REACT_APP_GITHUB_CLIENT_ID=

# Frontend Integration Client IDs
REACT_APP_GOOGLE_CLIENT_ID=
REACT_APP_SLACK_CLIENT_ID=
REACT_APP_HUBSPOT_CLIENT_ID=

# Application
ENVIRONMENT=development
DEBUG=true

# Mock Mode Configuration
# Set MOCK_MODE=true to enable all mock integrations (useful for testing without API keys)
MOCK_MODE=false

# Individual mock controls (only used if MOCK_MODE is false)
MOCK_EMAIL_ENABLED=true
MOCK_SLACK_ENABLED=true
MOCK_GOOGLE_ENABLED=true
MOCK_HUBSPOT_ENABLED=true
MOCK_LLM_ENABLED=false  # Set to true to mock LLM calls (useful for testing)
